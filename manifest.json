{
  "name": "Pivotate Ultimate",
  "version": "3.0",
  "description": "Create screenshots, annotate and submit them to Pivotal Tracker with one click.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
     "default_icon": "icon-19.png",
     "default_title": "Add Pivotal Story"
  },
  "icons":{
    "128":"icon-128.png",
    "48" :"icon-48.png",
    "16" :"icon-16.png"
  },
  "permissions": [ "activeTab", "<all_urls>", "http://*/", "https://*/", "https://www.pivotaltracker.com/services/v3/*", "https://www.pivotaltracker.com/services/v5/*", "tabs" ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
